datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  firstName String?
  lastName  String?
  email     String    @unique
  password  String
  role      String    @default("user")

  profile   Profile?
}

model Profile {
  id        String   @id @default(uuid())
  firstName String?
  lastName  String?
  location  String?
  phone     String?
  image     String?
  // etc.

  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])
}
