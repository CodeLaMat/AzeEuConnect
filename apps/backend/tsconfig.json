{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@repo/db": ["../../packages/db/dist"],
      "@/*": ["src/*"]
    },
    "typeRoots": ["types", "./node_modules/@types"],
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["server.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
