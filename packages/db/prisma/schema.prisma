// Updated Permission model to use the Action enum
model Permission {
  id          String   @id @default(uuid())
  name        String   @unique
  action      Action   @default(ALL) // or any default that makes sense
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  roles       RolePermission[]
}


// The Role and RolePermission models remain largely the same
model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  permissions RolePermission[]
  users       User[]
}


model RolePermission {
  id           String     @id @default(uuid())
  role         Role       @relation(fields: [roleId], references: [id])
  roleId       String
  permission   Permission @relation(fields: [permissionId], references: [id])
  permissionId String
  // New field to store a friendly display name for the assignment.
  displayName  String     
  createdAt    DateTime   @default(now())

  @@unique([roleId, permissionId])
}
