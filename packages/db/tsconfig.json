{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",         
    "declaration": true,      
    "declarationMap": true
  },
  "include": ["src"],        
  "exclude": ["dist", "node_modules"]
}
